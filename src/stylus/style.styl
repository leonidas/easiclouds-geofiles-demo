@import "mixins"

body, html
  margin 0
  height 100%

#cloudmap
  height 100%
  width 80%
  float left

.legend
  padding: 6px 8px;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  background: rgba(255,255,255, 0.9);
  line-height: 20px;
  border-radius: 5px;
  color: #555;

.legend i
  color: #777;
  width: 18px;
  height: 18px;
  float: left;
  margin-right: 8px;
  opacity: 0.7;
